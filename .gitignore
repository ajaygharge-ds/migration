# ───────────────
# OS-specific junk
# ───────────────
.DS_Store
Thumbs.db

# ───────────────
# WordPress core (don't version control core files)
# ───────────────
wp-admin/
wp-includes/
# index.php
license.txt
readme.html

# ───────────────
# WordPress content (safe ignores)
# ───────────────
# Debug logs & backups
wp-content/debug.log
wp-content/ai1wm-backups/*

# Uploads (media should not be tracked in Git)
# wp-content/uploads/

# Cache (plugin-generated)
wp-content/cache/

# Ignore system junk in wp-content
wp-content/.DS_Store

# ───────────────
# Themes
# ───────────────
# Ignore all theme .DS_Store junk
wp-content/themes/**/.DS_Store

# Ignore compiled assets (CSS/Maps) if you build from SCSS/JS
# wp-content/themes/shelfradar-theme/style.css
wp-content/themes/shelfradar-theme/style.css.map

# Optional: ignore ALL compiled assets in your theme
# (uncomment if you build via webpack/gulp and want only sources in Git)
# wp-content/themes/shelfradar-theme/dist/
# wp-content/themes/shelfradar-theme/build/

# ───────────────
# Plugins
# ───────────────
# Ignore system junk in plugins
wp-content/plugins/**/.DS_Store

# Optional: ignore third-party plugins (if installed via WP or Composer)
# Keep only your custom plugins in version control

# ───────────────
# Config / Secrets
# ───────────────
wp-config.php
.env

# ───────────────
# Logs / Dumps
# ───────────────
*.log
# *.sql

# ───────────────
# Dependency dirs
# ───────────────
node_modules/
vendor/

# ───────────────
# IDE configs
# ───────────────
.idea/
.vscode/
